task :default => [:run]

desc "load the dictionary, output words and sequence"
task "run" do
  $LOAD_PATH.unshift(File.dirname(__FILE__), "lib")
  require 'word_challenge'

  # Load the data into strings
  dictionary = File.read("data/dictionary.txt")

  # call the app, passing the data as strings containing JSON
  result_json = WordChallenge.call(dictionary)
end
